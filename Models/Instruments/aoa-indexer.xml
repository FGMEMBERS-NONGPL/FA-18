<?xml version="1.0"?>
<PropertyList>
 <path>aoa-indexer.ac</path>

 <!-- Green, upper chevron -->
 <animation>
  <type>select</type>
  <object-name>UpperChevronOff</object-name>
  <condition>
   <or>
    <greater-than>
     <property>orientation/alpha-deg</property>
     <property>sim/aoa-indexer/fast-deg</property>
    </greater-than>
    <less-than-equals>
     <property>controls/gear/gear-down</property>
     <value>0</value>
    </less-than-equals>
   </or>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>UpperChevronOn</object-name>
  <condition>
  <and>
    <less-than-equals>
     <property>orientation/alpha-deg</property>
     <property>sim/aoa-indexer/fast-deg</property>
    </less-than-equals>
    <greater-than>
     <property>controls/gear/gear-down</property>
     <value>0</value>
    </greater-than>
   </and>
  </condition>
 </animation>

 <!-- Orange, donut -->
 <animation>
  <type>select</type>
  <object-name>DonutOff</object-name>
  <condition>
   <or>
    <or>
     <greater-than>
      <property>orientation/alpha-deg</property>
      <property>sim/aoa-indexer/too-slow-deg</property>
     </greater-than>
     <less-than>
      <property>orientation/alpha-deg</property>
      <property>sim/aoa-indexer/too-fast-deg</property>
     </less-than>
    </or>
    <less-than-equals>
     <property>controls/gear/gear-down</property>
     <value>0</value>
    </less-than-equals>
   </or>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>DonutOn</object-name>
  <condition>
   <and>
    <and>
     <less-than-equals>
      <property>orientation/alpha-deg</property>
      <property>sim/aoa-indexer/too-slow-deg</property>
     </less-than-equals>
     <greater-than-equals>
      <property>orientation/alpha-deg</property>
      <property>sim/aoa-indexer/too-fast-deg</property>
     </greater-than-equals>
    </and>
    <greater-than>
     <property>controls/gear/gear-down</property>
     <value>0</value>
    </greater-than>
   </and>
  </condition>
 </animation>

 <!-- Red, lower chevron -->
 <animation>
  <type>select</type>
  <object-name>LowerChevronOff</object-name>
  <condition>
   <or>
    <less-than>
     <property>orientation/alpha-deg</property>
     <property>sim/aoa-indexer/slow-deg</property>
    </less-than>
    <less-than-equals>
     <property>controls/gear/gear-down</property>
     <value>0</value>
    </less-than-equals>
   </or>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>LowerChevronOn</object-name>
  <condition>
   <and>
    <greater-than-equals>
     <property>orientation/alpha-deg</property>
     <property>sim/aoa-indexer/slow-deg</property>
    </greater-than-equals>
    <greater-than>
     <property>controls/gear/gear-down</property>
     <value>0</value>
    </greater-than>
   </and>
  </condition>
 </animation>

</PropertyList>

