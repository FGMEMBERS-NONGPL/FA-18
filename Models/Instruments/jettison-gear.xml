<?xml version="1.0"?>
<PropertyList>
 <path>jettison-gear.ac</path>

 <!-- Nose gear control light -->
 <animation>
  <type>select</type>
  <object-name>NoseGearOff</object-name>
  <condition>
   <less-than-equals>
    <property>gear/gear[0]/position-norm</property>
    <value>0</value>
   </less-than-equals>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>NoseGearOrange</object-name>
  <condition>
   <and>
    <greater-than>
     <property>gear/gear[0]/position-norm</property>
     <value>0</value>
    </greater-than>
    <less-than>
     <property>gear/gear[0]/position-norm</property>
     <value>1</value>
    </less-than>
   </and>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>NoseGearGreen</object-name>
  <condition>
   <greater-than-equals>
    <property>gear/gear[0]/position-norm</property>
    <value>1</value>
   </greater-than-equals>
  </condition>
 </animation>

