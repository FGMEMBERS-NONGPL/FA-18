<?xml version="1.0"?>
<PropertyList>
 <path>afterburner.ac</path>

 <animation>
  <type>select</type>
  <object-name>Afterburner</object-name>
  <condition>
    <property>engines/engine[1]/augmentation[0]</property>
  </condition>
 </animation>

 <animation>
  <type>blend</type>
  <object-name>Afterburner</object-name>
  <value>0.5</value>
 </animation>

