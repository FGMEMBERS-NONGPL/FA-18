 <animation>
  <type>textranslate</type>
  <object-name>Afterburner</object-name>
  <property>fdm/jsbsim/sim-time-sec</property>
  <factor>100</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>scale</type>
  <object-name>Afterburner</object-name>
  <property>engines/engine[1]/nozzle-pos-norm</property>
  <x-factor>0</x-factor>
  <y-factor>0.2</y-factor>
  <z-factor>0.2</z-factor>
  <y-offset>0.8</y-offset>
  <z-offset>0.8</z-offset>
 </animation>

</PropertyList>

